{
  "swagger": "2.0",
  "info": {
    "title": "CSE341 Project2 API",
    "version": "1.0.0",
    "description": "A simple recipes API for CSE341 to GET, POST, PUT, and DELETE recipes."
  },
  "host": "cse341project2-iu4l.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/recipes": {
      "get": {
        "description": "Get a list of all recipes from the recipes collection. This is simply a list of recipes with a description and id.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Add a recipe. It will post in both collections.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "any"
                },
                "category": {
                  "type": "string",
                  "example": "any"
                },
                "cuisine": {
                  "type": "string",
                  "example": "any"
                },
                "description": {
                  "type": "string",
                  "example": "Creamy and delicious chicken alfredo pasta for the whole family."
                },
                "prepTime": {
                  "type": "integer",
                  "example": "any"
                },
                "cookTime": {
                  "type": "integer",
                  "example": "any"
                },
                "ingredients": {
                  "type": "array",
                  "example": [],
                  "items": {
                    "type": "string"
                  }
                },
                "instructions": {
                  "type": "array",
                  "example": [],
                  "items": {
                    "type": "string"
                  }
                },
                "notes": {
                  "example": "Feel free to add vegetables like broccoli or spinach for extra flavor and nutrition."
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{id}": {
      "get": {
        "description": "Get a recipe by id from the recipe_details collection.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Update a recipe by id from both collections.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "any"
                },
                "category": {
                  "type": "string",
                  "example": "any"
                },
                "cuisine": {
                  "type": "string",
                  "example": "any"
                },
                "description": {
                  "type": "string",
                  "example": "Creamy and delicious chicken alfredo pasta for the whole family."
                },
                "prepTime": {
                  "type": "integer",
                  "example": "any"
                },
                "cookTime": {
                  "type": "integer",
                  "example": "any"
                },
                "ingredients": {
                  "type": "array",
                  "example": [],
                  "items": {
                    "type": "string"
                  }
                },
                "instructions": {
                  "type": "array",
                  "example": [],
                  "items": {
                    "type": "string"
                  }
                },
                "notes": {
                  "example": "Feel free to add vegetables like broccoli or spinach for extra flavor and nutrition."
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a recipe by id from both collections.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/category/{category}": {
      "get": {
        "description": "Choose from: main, side, dessert, appetizer, drink, or other.",
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/cuisine/{cuisine}": {
      "get": {
        "description": "Search by any cuisine you can think of.",
        "parameters": [
          {
            "name": "cuisine",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
